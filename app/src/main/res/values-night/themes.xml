<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MastersProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundImageView" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="roundImageView2" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="roundImageView3" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/black</item>
    </style>

    <color name="textColorPrimary">#FFFFFF</color> <!-- White for dark mode -->
    <color name="backgroundColorPrimary">#000000</color> <!-- Black for dark mode -->

</resources>